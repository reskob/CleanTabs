{
    "name": "Clean Tabs",
    "description": "The Tab Task Manager: Find, consolidate, or close duplicate tabs across all your browser windows.",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": ["tabs", "tabGroups", "windows", "storage"],
    "action": { 
        "default_popup": "popup.html", 
        "default_title": "Clean Tabs",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  }